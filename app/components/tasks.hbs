<div class="tasks-container">
  <h2 class="task-title">{{@tasksToShow.[0].status}} Tasks</h2>
  {{#each @tasksToShow as |task|}}
    <div class="tasks-details">
      <Task::Holder
        @task={{task}}
        @onChange={{@onTaskFieldChange}}
        @onStausChange={{this.onStatusChange}}
        @onPercentageChange={{this.onPercentageChange}}
        @onTaskUpdate={{@onTaskUpdate}}
      />
    </div>
  {{/each}}
</div>